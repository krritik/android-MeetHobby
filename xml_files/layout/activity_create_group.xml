<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_register"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".CreateGroupActivity">

    <Button
        android:id="@+id/buttonHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@android:drawable/ic_menu_revert"
        android:text=" Back "
        android:background="#000"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonHome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:gravity="center"
        android:text="Group Creation"
        android:textColor="#4CAF50"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/editGroupName"
        android:layout_width="277dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/textView5"
        android:background="#001300"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter Group Name"
        android:inputType="text"
        android:textColor="#FFFFFF"
        android:textColorHint="#ffffff" />

    <EditText
        android:id="@+id/editGroupDescription"
        android:layout_width="235dp"
        android:layout_height="154dp"
        android:layout_below="@+id/editGroupName"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="31dp"
        android:layout_toRightOf="@id/textView6"
        android:background="#001300"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter Group Description"
        android:inputType="textMultiLine"
        android:lineSpacingExtra="8sp"
        android:lines="5"
        android:maxLines="5"
        android:singleLine="false"
        android:textColor="#FFFCFC"
        android:textColorHint="#ffffff" />

    <Button
        android:id="@+id/buttonCreateGroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editGroupDescription"
        android:layout_marginTop="50dp"
        android:background="#4CAF50"
        android:text="Register From here "
        android:textColor="#000" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_below="@id/textView"
        android:layout_marginTop="50dp"
        android:text="Group Name:"
        android:textColor="#4CAF50"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="132dp"
        android:layout_height="71dp"
        android:layout_below="@id/editGroupName"
        android:layout_marginTop="31dp"
        android:text="Group Description:"
        android:textColor="#4CAF50"
        android:textSize="24dp" />


</RelativeLayout>